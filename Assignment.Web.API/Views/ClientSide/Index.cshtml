    <h1>Client Side Notifications</h1>

<div id = "servermssg">
    <ul id="mssgList">

    </ul>
</div>

@*<script src="~/lib/signalr/signalr.js"></script>*@
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>
<script>
    "use strict"

var connection = new signalR.HubConnectionBuilder().withUrl("/notification").build();
connection.start();
connection.on("ReceiveNotification", (mssg) => {
    console.log(mssg);
    var data = mssg[0] +" "+ mssg[1] + " " + mssg[2] + " " + mssg[3] 
    var li = document.createElement("li");
    li.textContent = data;
    document.getElementById("mssgList").appendChild(li);


});
</script>